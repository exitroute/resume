<section id="skills-and-tools">

  <div class="row justify-content-end">
    <div class="col-1">
      <nav class="nav justify-content-end">
        <a class="nav-link" href="#top">
          <small>top</small>
        </a>
      </nav>
    </div>
  </div>

  <div class="row mt-3 mb-5">

    <div class="co1-12 col-md-4 text-md-right">
      <h2>
        Skills and Tools
      </h2>
    </div>
    <div class="col-12 col-md-8">

      <%- site.resume.skillsAndTools.description.html %>


        <!--skills and tools cards-->

        <div class="row">

          <% site.resume.skillsAndTools.detail.forEach((entry) => { %>
            <div class="
              col-6 
              col-md-4 
              order-1 
              order-md-1 
              my-green-bg 
              py-3 
              border 
              border-white 
              border 
              border-white 
              text-center">
              <h5 class="
                font-weight-bold 
                text-white 
                text-center">
                <%= entry.name %>
              </h5>
              <% if(entry.descriptors.length > 0) { 
                 entry.descriptors.forEach((descriptor) => { %>
                <span class="
                  d-inline-block 
                  bg-white 
                  rounded-left 
                  rounded-right 
                  m-1 
                  p-1">
                  <%= descriptor %>
                </span>
                <% })
                  } else { %>
                  <p class="
                    bg-white
                    rounded-left 
                    rounded-right
                    text-left
                    m-1 
                    p-1">
                    <%- entry.description %>
                  </p>
                  <% } %>
            </div>
            <%  }); %>
        </div>
    </div>

</section>